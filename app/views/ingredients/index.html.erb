<h1>Ingredients</h1>

<table class="table table-striped">
  <thead class="thread-dark">
    <tr>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Name</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.quantity %></td>
        <td><%= ingredient.unit %></td>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.recipe_id %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, class: "btn btn-secondary" %>

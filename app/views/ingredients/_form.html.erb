<%= form_with(model: ingredient) do |form| %>
  <% if ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul>
        <% ingredient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <!--    Ingredient.all.map { |i| i.unit }.uniq-->
      <div class="col-sm-2">
        <%= form.number_field :quantity, class: "form-control", min: 0, step: :any, placeholder: "Quantity" %>
      </div>
      <div class="col-sm-2">
        <%= form.select :unit, %w[ks mg g kg ml dcl l špetka lžička lžíce], {}, { :class => 'form-select' } %>
      </div>
      <div class="col-md-5">
        <%= form.text_field :name, class: "form-control", placeholder: "Name", required: true %>
      </div>
      <div class="col-md-1">
        <%= form.text_field :recipe_id, class: "form-control", placeholder: "Recipe", required: true %>
      </div>
      <div class="col-md-1">
        <%= form.submit class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <br/>
<% end %>

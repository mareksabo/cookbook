<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <h1 class="display-4"><%= @recipe.name %></h1>
      <br/>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <ul class="list-group">
        <%= markdown(@recipe.ingredients) %>
      </ul>
    </div>
    <div class="col-sm-8">
      <%= markdown(@recipe.instructions) %>

      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn btn-secondary" %>
      <% end %>
      <%= link_to 'Back', recipes_path, class: "btn btn-secondary" %>
      <br/>
      <br/>
      <% if user_signed_in? %>
        <%= link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
      <% end %>

    </div>
  </div>
</div>
